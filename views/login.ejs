<%- include('partials/header') -%>

<main class="container" style="margin-top:20px;">
  <div class="signin-button row justify-content-center">
    <section class="col-6 mt-5">
        <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
        <div class="alert alert-danger"><%= el.msg %></div>
        <% }) %> <% } %> <% if (locals.messages.info) { %> <%
        messages.info.forEach( el => { %>
        <div class="alert alert-info"><%= el.msg %></div>
        <% }) %> <% } %>
        <form action="/login" method="POST" class=".landing">
          <div class="form-group row>
            <label for="exampleInputEmail1" class="col-sm-3 col-form-label"
              >Email address</label
            >
            <input
              type="email"
              class="form-control"
              id="exampleInputEmail1"
              aria-describedby="emailHelp"
              name="email"
            />
          </div>
          <div class="form-group row>
            <label for="exampleInputPassword1" class="col-sm-3 col-form-label">Password</label>
            <input
              type="password"
              class="form-control"
              id="exampleInputPassword1"
              name="password"
            />
          </div>
          <div class="row">
            <div class="col-sm-9 offset-sm-3">
              <button type="submit" class="btn btn-primary">Login</button>
            </div>
          </div>
          
        </form>
      </section>
  </div>
</main>

<%- include('partials/footer') -%>

